<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OpenWeather</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div class="alert alert-info">
        <%= msg %>
      </div>
    <% end %>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #ffffff;">
      <%= image_tag("logo1.png", width: 100, class: "image") %>
      <% if current_user %>
        <%= link_to("Sprawdź pogodę!", new_weather_path, class: "navbar-brand") %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <%= link_to("Strona główna", root_path, class: "nav-link") %>
            </li>
            <li class="nav-item active">
              <%= link_to("Wykaz miast z pogodą", weathers_path, class: "nav-link") %>
            </li>
            <li class="nav-item active">
              <%= link_to(destroy_user_session_path, method: :delete, class: "nav-link") do %>
                Wyloguj się
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to(user_google_oauth2_omniauth_authorize_path, method: :post, class: "nav-link") do %>
                Zaloguj się z Google
              <% end %>
            </li>
          </ul>
        </div>
      <% end %>
    </nav>
    <hr>
    <%= yield %>
  </body>
</html>
