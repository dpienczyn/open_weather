    <%= form.text_area :note, class: "form-control col-sm-3", placeholder: "Notatka", rows: "3" %>
  </div>
  <div class="btn-sumbit">
    <%= form.submit :Zapisz, class: "btn btn-outline-info col-sm-3" %>
  </div>
<% end %>
